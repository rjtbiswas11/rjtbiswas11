<Window x:Class="QuizApplication.QuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quiz" Height="600" Width="600" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer x:Name="sc_Question" VerticalScrollBarVisibility="Auto" Grid.Row="0">
            <StackPanel x:Name="spl_question" Orientation="Vertical" Margin="0 20 0 0">
            </StackPanel>
        </ScrollViewer>
        <DockPanel Grid.Row="1">
            <Button x:Name="btnNext" Content="Next" Margin="5 5 20 5" Width="50" Height="20" HorizontalAlignment="Right" Click="btnNext_Click" Visibility="Collapsed"/>
        </DockPanel>
    </Grid>


</Window>
